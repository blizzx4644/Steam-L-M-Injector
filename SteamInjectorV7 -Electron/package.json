{
  "name": "steam-injector-electron",
  "version": "2.0.0",
  "description": "Application Electron pour injecter des jeux dans Steam avec support manette",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": ["steam", "injector", "electron", "gamepad"],
  "author": "Steam Injector Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "adm-zip": "^0.5.10",
    "cheerio": "^1.0.0-rc.12"
  },
  "build": {
    "appId": "com.steaminjector.app",
    "productName": "Steam Injector",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": ["nsis"],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Utility"
    }
  }
}
